{
  "name": "@mako10k/mcp-copilot-instructions",
  "version": "0.1.3",
  "description": "MCP server for context-dependent dynamic instruction generation with goal management. Solves LLM attention dispersion by extracting only relevant instructions for current development phase.",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "mcp-copilot-instructions": "dist/src/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github-copilot",
    "claude",
    "instructions",
    "goals",
    "context-management",
    "llm",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mako10k/mcp-copilot-instructions.git"
  },
  "bugs": {
    "url": "https://github.com/mako10k/mcp-copilot-instructions/issues"
  },
  "homepage": "https://github.com/mako10k/mcp-copilot-instructions#readme",
  "author": "mako10k",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "npm run build && node dist/tests/index.js",
    "test:unit": "npm run build && node dist/tests/index.js unit",
    "test:integration": "npm run build && node dist/tests/index.js integration",
    "test:list": "npm run build && node dist/tests/index.js list",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "gray-matter": "^4.0.3",
    "mdast-util-to-string": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  }
}
